{
  "name": "auto-window-stickers",
  "version": "1.0.0",
  "description": "Hugo-based marketing site for exterior and interior car window stickers",
  "main": "index.js",
  "scripts": {
    "dev": "hugo server --disableFastRender",
    "build": "hugo --gc --minify",
    "tailwind:watch": "npx tailwindcss -i ./assets/tailwind/src/base.css -o ./assets/tailwindstyle.css --watch --config ./assets/tailwind/tailwind.config.js",
    "tailwind:build": "npx tailwindcss -i ./assets/tailwind/src/base.css -o ./assets/tailwindstyle.css --minify --config ./assets/tailwind/tailwind.config.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run tailwind:watch\"",
    "generate:pages": "python3 generate-pages.py",
    "generate:pages:dry": "python3 generate-pages.py --dry-run --limit 5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/popskraft/auto-window-stickers.git"
  },
  "keywords": ["hugo", "auto", "window-stickers", "dealership", "marketing"],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/popskraft/auto-window-stickers/issues"
  },
  "homepage": "https://github.com/popskraft/auto-window-stickers#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.21",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.3.0"
  }
}
